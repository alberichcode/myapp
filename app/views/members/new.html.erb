<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4">
				<h2 class="title is-2">Invite members</h2>

        <%= form_for(@member, :html => { :class => "form login" }) do |f| %>
        <% if @member.errors.any? %>
          <div id="error_expl" class="message is-danger">
            <div class="message-header">
              <h3><%= pluralize(@member.errors.count, "error") %> prohibited this Member from being saved:</h3>
            </div>
            <div class="message-body">
              <ul>
                <% @member.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          </div>
        <% end %>
        <% if @user.errors.any? %>
          <div id="error_expl" class="message is-danger">
            <div class="message-header">
              <h3><%= pluralize(@user.errors.count, "error") %> prohibited this Member from being saved:</h3>
            </div>
            <div class="message-body">
              <ul>
                <% @user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          </div>
       <% end %>

         <%= fields_for( :user ) do |w| %>
            <div class="field">
              <%= w.label :email,"*Email", :class => "organization" %>
              <%= w.text_field :email, :class => 'input', autofocus: true %>

            </div>
         <% end %>

         <div class="field">
           <%= f.label :first_name, "*Name", class: "organization" %>
           <%= f.text_field :first_name, :class => "input", required: true %>
         </div>

         <br />
         <div class="field">
           <button class="button is-primary is-medium" type="submit">
            Create user and invite
           </button>
         </div>
         <% end %>

      </div>
    </div>
  </div>
</section>
