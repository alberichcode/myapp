<!DOCTYPE html>
<html>
  <head>
    <title>MusicHub</title>
    <%= csrf_meta_tags %>
 		<meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag "https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'hello_vue' %>
  </head>

  <body>
  	<% if flash[:notice] %>
    	<div class="notification is-primary global-notification">
  	  	<p class="notice"><%= notice %></p>
    	</div>
   	<% end %>
    <% if flash[:alert] %>
    <div class="notification is-danger global-notification">
      <p class="alert"><%= alert %></p>
    </div>
    <% end %>
     <nav class="navbar is-dark is-fixed-top" role="navigation" aria-label="main navigation">
      <div class="navbar-brand">
        <% if user_signed_in?%>
        <%= link_to root_path, class:"navbar-item" do %>
          <h1 class="title is-5 has-text-white">MusicHub</h1>
        <% end  %>
        <% else %>
        <%= link_to root_path, class:"navbar-item" do %>
          <h1 class="title is-5 has-text-white">MusicHub</h1>
        <% end  %>
        <% end %>
      <div class="navbar-burger burger" data-target="navbar">
        <span></span>
        <span></span>
        <span></span>
      </div>
     </div>

      <div id="navbar" class="navbar-menu">

        <div class="navbar-start">
          <%= link_to 'News', "#" , class:"navbar-item" %>
          <%= link_to 'Forum', "#" , class:"navbar-item" %>
          <%= link_to 'Jobs', "#" , class:"navbar-item" %>
          


        </div>

        <div class="navbar-end">
              <% if user_signed_in? %>
              <p class="control new-shot">
                <%= link_to "#", class:"button is-primary"  do %>
                  <span class="icon is-small"><i class="fa fa-upload"></i></span>
                  <span>New Shot</span>
                <% end %>
              </p>

              <div class="navbar-item has-dropdown is-hoverable account">
                <a class="navbar-link user-thumb">
                  <h1>My account</h1>
                </a>


                <div class="navbar-dropdown">
                <% if !current_user.is_admin?%>
                  <%= link_to "New Category","#",  class:"navbar-item" %>
                <% end %>
                <% if current_user%>
                  <%= link_to "Edit my account",edit_user_registration_path, class:"navbar-item" %>
                  <%= link_to "My account","#", class:"navbar-item" %>
                  <%= link_to "Log Out", destroy_user_session_path, method: :delete, class:"navbar-item" %>
                  <%= link_to "Invite friend", new_member_path, class:"navbar-item" %>
                <% end %>
                </div>
              </div>
              <% else %>
                <%= link_to "Sign In", new_user_session_path, class:"navbar-item" %>
                <%= link_to "Sign up", new_user_registration_path, class:"navbar-item" %>
              <% end %>
            </div>
       </div>
    </nav>

    <%= yield %>
  </body>
</html>
